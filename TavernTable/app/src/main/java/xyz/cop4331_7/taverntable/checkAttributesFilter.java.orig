package xyz.cop4331_7.taverntable;

import android.content.Context;
import android.text.Editable;
import android.text.TextWatcher;
import android.widget.EditText;

import java.util.ArrayList;


public abstract class checkAttributesFilter implements TextWatcher {
    private final EditText etText;
    private final Context context;
    private final ArrayList<String> checkArr;

    public checkAttributesFilter(EditText etText, Context context, ArrayList<String> checkArr) {
        this.etText = etText;
        this.context = context;
        this.checkArr = checkArr;
    }

    public abstract void validate(ArrayList<String> checkArray, EditText etText, Context context);//, String text);

    @Override
    final public void afterTextChanged(Editable s)
    {
        String text = etText.getText().toString();
        validate(checkArr, etText, context);
    }

    @Override
    final public void beforeTextChanged(CharSequence s, int start, int count, int after) { /* Don't care */ }

    @Override
    final public void onTextChanged(CharSequence s, int start, int before, int count) { /* Don't care */ }

}