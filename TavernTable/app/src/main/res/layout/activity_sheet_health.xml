<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b50000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".SheetHealthActivity">

        <LinearLayout
            android:id="@+id/llHealthTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:background="#AAAAAA"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/armor_class_text"
                    android:textColor="#FFFFFF"
                    android:background="#555555"/>

                <EditText
                    android:id="@+id/etArmorClass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/placeholder_text"
                    android:inputType="text"
                    android:background="#FFFFFF"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/initiative_text"
                    android:textColor="#FFFFFF"
                    android:background="#555555"/>

                <EditText
                    android:id="@+id/etInitiative"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/placeholder_text"
                    android:inputType="text"
                    android:background="#FFFFFF"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/speed_text"
                    android:textColor="#FFFFFF"
                    android:background="#555555"/>

                <EditText
                    android:id="@+id/etSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/placeholder_text"
                    android:inputType="text"
                    android:background="#FFFFFF"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llHealthMiddle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:background="#AAAAAA"
            android:layout_below="@id/llHealthTop">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/maximum_hit_points_text"
                    android:textColor="#FFFFFF"
                    android:background="#555555"/>

                <EditText
                    android:id="@+id/etMaxHP"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/placeholder_text"
                    android:inputType="text"
                    android:background="#FFFFFF"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/current_hit_points_text"
                    android:textColor="#FFFFFF"
                    android:background="#555555"/>

                <EditText
                    android:id="@+id/etCurrentHP"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/placeholder_text"
                    android:inputType="text"
                    android:background="#FFFFFF"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/temporary_hit_points_text"
                    android:textColor="#FFFFFF"
                    android:background="#555555"/>

                <EditText
                    android:id="@+id/etTempHP"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/placeholder_text"
                    android:inputType="text"
                    android:background="#FFFFFF"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llHealthBottom"
            android:layout_below="@id/llHealthMiddle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#AAAAAA"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hit_dice_text"
                        android:textColor="#FFFFFF"
                        android:background="#555555"/>

                    <EditText
                        android:id="@+id/etHitDice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/placeholder_text"
                        android:inputType="text"
                        android:background="#FFFFFF"/>
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/bSheetHealth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/submit_text"/>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>